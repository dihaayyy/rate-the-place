<% layout('layouts/app') %>

<div class="row">
  <div class="card mb-5">
    <img class="card-img-top" src="<%= place.image %>" alt="Card image cap" />
    <div class="card-body">
      <h1 class="card-title"><%= place.title %></h1>
      <p class="card-text"><%= place.description %></p>
      <p class="card-text-location"><%= place.location %></p>
      <p class="card-text-price font-weight-bold"><%= place.price %></p>
      <form
        action="/places/<%= place._id %>?_method=DELETE"
        method="POST"
        style="display: inline !important"
      >
        <button class="btn btn-danger" type="submit">Delete</button>
      </form>
      <a class="btn btn-warning" href="/places/<%= place.id %>/edit">Edit</a>
      <a class="btn btn-primary" href="/places">All Places</a>
    </div>
  </div>
</div>

<div class="row justify-content-center">
  <h3>Leave a Rating!</h3>
  <form action="">
    <div class="mb-3 col-6">
      <label for="rating" class="form-label">Rating</label>
      <input
        type="range"
        class="form-range"
        name="review[rating]"
        id="rating"
        min="1"
        max="5"
        style="width: 85vw"
      />
    </div>
    <div class="mb-3 col-6">
      <label for="review" class="form-label">Review</label>
      <textarea
        class="form-control"
        name="review[review]"
        id="review"
        rows="3"
        style="width: 85vw"
      ></textarea>
    </div>
    <div class="row mb-3 justify-content-center">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    </div>
  </form>
</div>
